
{{#> layouts/layout title = "Open Broker Welcome Page" }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="entry">
  <h1>Welcome to OpenBroker, the imaginary brokerage.</h1>

    <form action="/login" method="POST">
        <div class="body">
            Do you already have an imaginary account with OpenBroker?  Login here.<br>
        </div>
        <div class="rounded-md shadow-sm">
            <div>
                Email address: <input
                        type="email"
                        name="email"
                        minlength="4"
                        required
                />
            </div>
            <div >
                Password: <input aria-label="Password" name="password" id="password" type="password"
                                 required autocomplete="current-password" minlength="1"
                                 maxlength="30" />
                <span class="password-toggle-icon"><i class="fas fa-eye"></i></span>
            </div>
            <div >
                <button type="submit" >
                    Login
                </button>
            </div>
        </div>
    </form>

    <form action="/register" method="POST">
        <div class="body">
            Are you interested in opening an imaginary account with OpenBroker?  Register here.<br>
        </div>
        <div class="rounded-md shadow-sm">
            <div>
                Offer code: <input
                    type="text"
                    name="offer_code"
                    minlength="4"
                    required
            />
            </div>
            <div>
                Name: <input
                    type="text"
                    name="customer_name"
                    minlength="4"
                    required
            />
            </div>
            <div>
                Email address: <input
                    type="email"
                    name="email_address"
                    minlength="4"
                    required
            />
            </div>
            <div >
                Password: <input aria-label="Password" name="password" id="password" type="password"
                                 required autocomplete="current-password" minlength="8"
                                 maxlength="30" />
                <span class="password-toggle-icon"><i class="fas fa-eye"></i></span>
            </div>
            <div >
                <button type="submit" >
                    Register
                </button>
            </div>
        </div>
    </form>
</div>
    <script src="app/js/login.js"></script>

{{~/layouts/layout }}
