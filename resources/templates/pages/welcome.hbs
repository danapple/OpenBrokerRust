
{{#> layouts/layout title = "Open Broker Welcome Page" }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="entry">
  <h1>Welcome to OpenBroker, the imaginary brokerage.</h1>
    <div class="grid">
        <div id="login_failure_message" class="warning">
            <script>
                if ("{{login_failure_message}}" !== "") {
                    document.getElementById("login_failure_message").innerHTML = "{{login_failure_message}}";
                }
            </script>
        </div>
        <div id="registration_failure_message" class="warning">
            <script>
                if ("{{registration_failure_message}}" !== "") {
                    document.getElementById("registration_failure_message").innerHTML = "{{registration_failure_message}}";
                }
            </script>
        </div>
        <div id="login">
            <div id="registration_success_message" class="success">
                <script>
                    if ("{{registration_success_message}}" !== "") {
                        document.getElementById("registration_success_message").innerHTML = "{{registration_success_message}}";
                    }
                </script>
            </div>
            <form action="/login" method="POST">
                <div class="body">
                    Do you already have an imaginary account with OpenBroker?  Login here.
                </div>
                <div class="grid">
                    <div class="right-align">
                        Email address:
                    </div>
                    <div>
                        <input
                            type="email"
                            name="email"
                            minlength="4"
                            required/>
                    </div>
                    <div class="right-align">Password:</div>
                    <div><input aria-label="Password" name="login_password" id="login_password" type="password"
                                     required autocomplete="current-password" minlength="1"
                                     maxlength="30" />
                        <span class="password-toggle-icon"><i id='login-password-toggle' class="fas fa-eye"></i></span>
                    </div>
                    <div> </div>

                    <div>
                        <button type="submit">Login</button>
                    </div>
                </div>
            </form>
        </div>
        <div id="register">
            <form action="/register" method="POST">
                <div class="body">
                    Are you interested in opening an imaginary account with OpenBroker?  Register here.
                </div>
                <div class="grid">
                    <div class="right-align">
                        Offer code:
                    </div>
                    <div>
                        <input
                            type="text"
                            name="offer_code"
                            minlength="4"
                            required/>
                    </div>
                    <div class="right-align">
                        Name:
                    </div>
                    <div><input
                            type="text"
                            name="actor_name"
                            minlength="4"
                            required
                    />
                    </div>
                    <div class="right-align">
                        Email address:
                    </div>
                    <div><input
                            type="email"
                            name="email_address"
                            minlength="4"
                            required
                    />
                    </div>
                    <div class="right-align">
                        Password:
                    </div>
                    <div><input aria-label="Password" name="register_password" id="register_password" type="password"
                                         required autocomplete="current-password" minlength="8"
                                         maxlength="30" />
                        <span class="password-toggle-icon"><i id='register-password-toggle' class="fas fa-eye"></i></span>
                    </div>
                    <div></div>
                    <div >
                        <button type="submit" >
                            Register
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
    <script src="app/js/login.js"></script>

{{~/layouts/layout }}
